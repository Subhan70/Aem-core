<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          granite:id="image-v3-smartcrop-dialog"
          jcr:primaryType="nt:unstructured"
          jcr:title="Smart Crop"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[core.wcm.components.image.v3.editor]"
          trackingFeature="core-components:image:v3">
    <content
        granite:class="cmp-image__editor smartcropdialog"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <columns
                granite:class="smartcrop-dialog-columns"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                margin="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <column1
                        granite:class="smartcrop-preview-column"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <ngdmimage
                                granite:class="ngdm-smartcrop-thumbnail"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="core/wcm/components/image/v3/image/nextgendmthumbnail"
                                height="{Long}260"
                                width="{Long}260"
                                withSmartCrop="{Boolean}true"/>
                        </items>
                    </column1>
                    <column2
                        granite:class="smartcrop-options-column"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <smart-crop-selector
                                granite:class="image-v3-dialog-smartcrop-field"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                emptyText="Original"
                                fieldLabel="Ratio"
                                name="./smartCrop">
                                <items jcr:primaryType="nt:unstructured">
                                    <original
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/option"
                                        text="Original"/>
                                    <landscape
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/option"
                                        text="Landscape"
                                        value="5:4"/>
                                    <wide-landscape
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/option"
                                        text="Wide Landscape"
                                        value="5:3"/>
                                    <square
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/option"
                                        text="Square"
                                        value="1:1"/>
                                    <portrait
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/option"
                                        text="Portrait"
                                        value="5:8"/>
                                    <super-wide
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/option"
                                        text="Super Wide"
                                        value="10:3"/>
                                </items>
                            </smart-crop-selector>
                            <smart-crop-input
                                granite:class="image-v3-dialog-smartcrop-field"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                emptyText="Enter aspect ratio. e.g. 4:3"
                                enableNextGenDynamicMedia="{Boolean}true"
                                fieldLabel="Aspect Ratio"
                                name="./smartCrop"/>
                        </items>
                    </column2>
                </items>
            </columns>
        </items>
    </content>
</jcr:root>
