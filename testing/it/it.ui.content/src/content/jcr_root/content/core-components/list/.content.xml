<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Page">
    <jcr:content
        cq:template="/conf/core-components/settings/wcm/templates/simple-template-v3"
        jcr:primaryType="cq:PageContent"
        jcr:language="en_us"
        jcr:title="List"
        sling:resourceType="core/wcm/components/page/v3/page">
        <root
            jcr:primaryType="nt:unstructured"
            sling:resourceType="core/wcm/components/container/v1/container">
            <container
                jcr:primaryType="nt:unstructured"
                sling:resourceType="core/wcm/components/container/v1/container">
                <list_v3_mixed_pages
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="core-component/components/list-v3"
                    listFrom="mixed">
                    <mixed
                        jcr:primaryType="nt:unstructured">
                        <item0
                            jcr:primaryType="nt:unstructured"
                            linkURL="/content/core-components/list"/>
                        <item1
                            jcr:primaryType="nt:unstructured"
                            linkURL="/content/core-components/embed"
                            linkText="Embed Test"/>
                    </mixed>
                </list_v3_mixed_pages>
                <list_v3_mixed_pages_linked
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="core-component/components/list-v3"
                    listFrom="mixed"
                    linkItems="true">
                    <mixed
                        jcr:primaryType="nt:unstructured">
                        <item0
                            jcr:primaryType="nt:unstructured"
                            linkURL="/content/core-components/list"/>
                        <item1
                            jcr:primaryType="nt:unstructured"
                            linkURL="/content/core-components/embed"
                            linkText="Embed Test"
                            linkTarget="_blank"/>
                    </mixed>
                </list_v3_mixed_pages_linked>
                <list_v3_mixed_pages_and_links
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="core-component/components/list-v3"
                    listFrom="mixed">
                    <mixed
                        jcr:primaryType="nt:unstructured">
                        <item0
                            jcr:primaryType="nt:unstructured"
                            linkURL="/content/core-components/list"/>
                        <item1
                            jcr:primaryType="nt:unstructured"
                            linkURL="/content/core-components/embed"/>
                        <item2
                            jcr:primaryType="nt:unstructured"
                            linkURL="http://www.adobe.com"
                            linkTarget="_blank"/>
                    </mixed>
                </list_v3_mixed_pages_and_links>
                <list_v3_mixed_pages_linked_description_modifieddate
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="core-component/components/list-v3"
                    listFrom="mixed"
                    linkItems="true"
                    showDescription="true"
                    showModificationDate="true">
                    <mixed
                        jcr:primaryType="nt:unstructured">
                        <item0
                            jcr:primaryType="nt:unstructured"
                            linkURL="/content/core-components/list"/>
                        <item1
                            jcr:primaryType="nt:unstructured"
                            linkURL="/content/core-components/embed"
                            linkText="Embed Test"
                            linkTarget="_blank"/>
                    </mixed>
                </list_v3_mixed_pages_linked_description_modifieddate>
                <list_v3_mixed_pages_linked_description_modifieddate_teaser
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="core-component/components/list-v3"
                    displayItemAsTeaser="true"
                    listFrom="mixed"
                    linkItems="true"
                    showDescription="true"
                    showModificationDate="true">
                    <mixed
                        jcr:primaryType="nt:unstructured">
                        <item0
                            jcr:primaryType="nt:unstructured"
                            linkURL="/content/core-components/list"/>
                        <item1
                            jcr:primaryType="nt:unstructured"
                            linkURL="/content/core-components/embed"
                            linkText="Embed Test"
                            linkTarget="_blank"/>
                    </mixed>
                </list_v3_mixed_pages_linked_description_modifieddate_teaser>
                <list_v3_mixed_pages_empty
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="core-component/components/list-v3"
                    listFrom="mixed"/>
            </container>
        </root>
    </jcr:content>
</jcr:root>
